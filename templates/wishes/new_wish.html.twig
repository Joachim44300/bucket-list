{% extends 'base.html.twig' %}

{% block title %}Nouveau souhait{% endblock %}

{% block container %}
    <div class="container">
        <div class="box">
            <div class="block">
                <h1 class="title">Ajouter un souhait</h1>

                <div class="field">
                    {# form_theme form 'foundation_5_layout.html.twig' #}

                    {{ form_start(wishForm) }}
                    {{ form_widget(wishForm) }}
                    <button>Save!</button>
                    {{ form_end(wishForm) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}